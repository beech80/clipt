import React, { useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import { Gamepad2, Video, Camera } from 'lucide-react';
import { motion } from 'framer-motion';

const SpaceLanding: React.FC = () => {
  const navigate = useNavigate();
  
  useEffect(() => {
    // Set body and document styles for cosmic theme
    document.body.style.margin = '0';
    document.body.style.padding = '0';
    document.body.style.overflow = 'hidden';
    document.body.style.backgroundColor = '#190033';
    document.documentElement.style.margin = '0';
    document.documentElement.style.padding = '0';
    document.documentElement.style.overflow = 'hidden';
    
    // Add CSS animations
    const styleElement = document.createElement('style');
    styleElement.id = 'cosmic-space-animations';
    styleElement.textContent = `
      @keyframes twinkle {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 1; }
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
      }
      
      @keyframes pulse {
        0%, 100% { filter: brightness(100%) drop-shadow(0 0 10px rgba(59, 130, 246, 0.5)); }
        50% { filter: brightness(130%) drop-shadow(0 0 20px rgba(59, 130, 246, 0.8)); }
      }
      
      @keyframes glow {
        0%, 100% { box-shadow: 0 0 10px rgba(255, 255, 255, 0.6); }
        50% { box-shadow: 0 0 30px rgba(147, 51, 234, 0.8); }
      }
      
      @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }
      
      @keyframes cosmic-pulse {
        0%, 100% { background-size: 100% 100%; }
        50% { background-size: 110% 110%; }
      }
    `;
    document.head.appendChild(styleElement);
    
    // Cleanup function
    return () => {
      document.body.style.margin = '';
      document.body.style.padding = '';
      document.body.style.overflow = '';
      document.body.style.backgroundColor = '';
      document.documentElement.style.margin = '';
      document.documentElement.style.padding = '';
      document.documentElement.style.overflow = '';
      
      const styleEl = document.getElementById('cosmic-space-animations');
      if (styleEl) styleEl.remove();
    };
  }, []);

  // Animation for floating elements
  const floatAnimation = {
    initial: { y: 0 },
    animate: { 
      y: [0, -10, 0],
      transition: { 
        duration: 3,
        repeat: Infinity,
        ease: "easeInOut" 
      }
    }
  };
  
  const handleNavigation = (path: string) => {
    navigate(path);
  };
  
  return (
    <div className="fixed inset-0 z-[999999] flex flex-col items-center justify-center overflow-hidden" 
      style={{
        background: 'linear-gradient(135deg, #190033 0%, #0D001A 100%)',
        backgroundSize: 'cover',
        backgroundAttachment: 'fixed'
      }}
    >
      {/* Stars background */}
      <div className="absolute inset-0 z-0">
        {Array.from({ length: 100 }).map((_, i) => (
          <div 
            key={i}
            className="absolute rounded-full bg-white"
            style={{
              width: Math.random() * 3 + 1 + 'px',
              height: Math.random() * 3 + 1 + 'px',
              top: Math.random() * 100 + '%',
              left: Math.random() * 100 + '%',
              opacity: Math.random() * 0.8 + 0.2,
              animation: `twinkle ${Math.random() * 3 + 2}s infinite ${Math.random() * 2}s`
            }}
          />
        ))}
      </div>

      {/* Nebula overlays */}
      <div className="absolute inset-0 z-0" style={{
        opacity: 0.6,
        background: 'radial-gradient(circle at 70% 30%, rgba(139, 92, 246, 0.5), transparent 60%), radial-gradient(circle at 30% 70%, rgba(59, 130, 246, 0.5), transparent 60%)',
        pointerEvents: 'none'
      }} />
      
      <div className="absolute inset-0 z-0" style={{
        opacity: 0.4,
        background: 'radial-gradient(circle at 20% 35%, rgba(147, 51, 234, 0.5), transparent 40%), radial-gradient(circle at 80% 65%, rgba(30, 64, 245, 0.5), transparent 40%)',
        pointerEvents: 'none'
      }} />

      {/* Floating elements */}
      <div className="absolute inset-0 z-10 pointer-events-none">
        {/* Satellites */}
        <motion.div 
          className="absolute w-12 h-12 text-4xl"
          style={{ top: '10%', left: '15%', transform: 'rotate(15deg)' }}
          {...floatAnimation}
        >
          🛰️
        </motion.div>
        <motion.div 
          className="absolute w-12 h-12 text-4xl"
          style={{ top: '20%', right: '20%', transform: 'rotate(-20deg)' }}
          {...floatAnimation}
        >
          🚀
        </motion.div>
        <motion.div 
          className="absolute w-12 h-12 text-4xl"
          style={{ bottom: '15%', left: '25%' }}
          {...floatAnimation}
        >
          🔭
        </motion.div>
        <motion.div 
          className="absolute w-8 h-8 text-3xl"
          style={{ top: '30%', left: '80%' }}
          {...floatAnimation}
        >
          🌠
        </motion.div>
        <motion.div 
          className="absolute w-6 h-6 text-2xl"
          style={{ bottom: '30%', right: '18%' }}
          {...floatAnimation}
        >
          📡
        </motion.div>
        
        {/* Planets */}
        <motion.div 
          className="absolute w-16 h-16"
          style={{ bottom: '70%', left: '10%' }}
          {...floatAnimation}
        >
          <div className="w-full h-full rounded-full bg-blue-400 opacity-70 shadow-[0_0_20px_rgba(59,130,246,0.7)]" />
        </motion.div>
        <motion.div 
          className="absolute w-10 h-10"
          style={{ top: '15%', right: '10%' }}
          {...floatAnimation}
        >
          <div className="w-full h-full rounded-full bg-orange-500 opacity-60 shadow-[0_0_15px_rgba(249,115,22,0.7)]" />
        </motion.div>
      </div>

      {/* Main content */}
      <div className="relative z-20 flex flex-col items-center justify-center">
        {/* CLIPT Logo */}
        <motion.div 
          className="flex flex-col items-center mb-8"
          initial={{ opacity: 0, y: -20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 1 }}
        >
          <h1 className="text-8xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500 drop-shadow-[0_0_15px_rgba(59,130,246,0.7)]">
            CLIPT
          </h1>
        </motion.div>

        {/* Menu buttons */}
        <div className="flex items-center justify-center gap-8 mb-8">
          <motion.button
            className="flex flex-col items-center justify-center w-24 h-24 bg-black/30 hover:bg-black/50 rounded-md backdrop-blur-sm border border-gray-700 text-white transition-all"
            whileHover={{ scale: 1.05, y: -5 }}
            onClick={() => handleNavigation('/retro')}
            initial={{ opacity: 0, y: -20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.5, delay: 0.4 }}
          >
            <Video className="w-8 h-8 mb-2" />
            <span className="text-xs uppercase font-medium">Retro Profile</span>
          </motion.button>

          <motion.button
            className="flex flex-col items-center justify-center w-24 h-24 bg-black/30 hover:bg-black/50 rounded-md backdrop-blur-sm border border-gray-700 text-white transition-all"
            whileHover={{ scale: 1.05, y: -5 }}
            onClick={() => handleNavigation('/squad-chat')}
            initial={{ opacity: 0, x: 20 }}
            animate={{ opacity: 1, x: 0 }}
            transition={{ duration: 0.5, delay: 0.5 }}
          >
            <Camera className="w-8 h-8 mb-2" />
            <span className="text-xs uppercase font-medium">Squad Chat</span>
          </motion.button>
        </div>

        {/* Start Game button */}
        <motion.button
          className="mt-4 px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 rounded-md shadow-lg shadow-blue-500/25 text-white font-medium flex items-center justify-center"
          whileHover={{ scale: 1.05 }}
          whileTap={{ scale: 0.95 }}
          onClick={() => handleNavigation('/boost')}
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.5, delay: 0.7 }}
        >
          START GAME <Gamepad2 className="ml-2 w-4 h-4" />
        </motion.button>
      </div>
    </div>
  );
};

export default SpaceLanding;
